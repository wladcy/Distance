@model IEnumerable<Distance.Models.CarViewModels>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dostępne samochody</h2>

<p>
    @Html.ActionLink("Dodaj Samochód", "New", "Cars", null, new { @class = "btn btn-primary" })
</p>

<table id="cars" class="table-bordered table-hover">
    <thead>
        <tr>
            <th>Marka</th>
            <th>Model</th>
            <th>Rejestracja</th>
            <th>Aktualny przebieg</th>
            <th>Status</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@Html.ActionLink(car.Name, "Edit", "Cars", new { id = car.Id }, null)</td>
                <td>@car.Model</td>
                <td>@car.CarPlate</td>
                <td>@car.KmAge</td>
                <td>@car.CarStatus.Status</td>
                <td>
                    <button data-car-id="@car.Id" class="btn-link js-delete">Usuń</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        bootbox.alert("Hello world!");
        $(document).ready(function () {
            $("#cars").DataTable();
            bootbox.alert("Hello world!");
            $("#cars").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Czy napewno chcesz usunąć tego kierowcę?",
                    function(result) {
                        if (result) {
                            $.ajax({
                                url: "/api/cars/" + button.attr("data-car-id"),
                                method: "DELETE",
                                success: function() {
                                    button.parents("tr").remove();
                                }
                            });
                        }
                    });
            });
        });
    </script>
}

