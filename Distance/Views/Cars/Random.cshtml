@model Distance.ViewModels.RandomCarViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ 
    var className = Model.Drivers.Count > 0 ? "popular" : null;
}

<h2 class="@className">@Model.Car.Name</h2>


@if (Model.Drivers.Count == 0)
{
    <p>Brak kierowcy</p>
}
else
{
    <ul>
        @foreach (var driver in Model.Drivers)
        {
            <li>@driver.Name</li>
        }
    </ul>
}

