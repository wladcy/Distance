@model Distance.ViewModels.NewDriverViewModel
@{
    /**/

    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Drivers"))
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.Driver.Name)
        @Html.TextBoxFor(m => m.Driver.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Driver.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Driver.Surname)
        @Html.TextBoxFor(m => m.Driver.Surname, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Driver.Surname)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Driver.Birthdate)
        @Html.TextBoxFor(m => m.Driver.Birthdate, "{0:d/MM/yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Driver.Birthdate)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Driver.AccountTypeId)
        @Html.DropDownListFor(m => m.Driver.AccountTypeId, new SelectList(Model.AccountTypes, "Id", "Name"), "Wybierz typ konta", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Driver.AccountTypeId)
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Driver.IsPremiumAccount) Konto Premium
        </label>
    </div>

    @Html.HiddenFor(m => m.Driver.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">DODAJ</button>

}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
