@model Distance.Models.CurrentUserInTravelViewModels
@{
    ViewBag.Title = "Home";
}

<div class="row" style="background-color:#2F3336;">
    <p style="color:white;" class="text-success">@ViewBag.StatusMessage</p>
    @if (Model.HasCarInTravel)
    {
        <div class=" jumbotron col-md-6" style="background-color:#2F3336;">
            <h3 style="color:white">Masz niezakończoną podróż służbową. @Html.ActionLink("Zakończ", "StopTravel", "Travels", new { id = Model.CarId }, null )</h3>
        </div>
    }
    
</div>
<div class="row">
    <h1 style="color:white; font-size:30px; text-align:center;">Aplikacja do ewidencji przejechanych kilometrów</h1>
    <p style="color:white; font-size:18px; text-align:center;">Nasza aplikacja webowa oferuje ewidencje przejechanych kilometrów przez pracowników firmy oraz osoby prywatne.</p>
</div>


